<Window x:Class="videoViewerWindow.videoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowState="Normal" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <Viewbox HorizontalAlignment="Left"  VerticalAlignment="Top" Stretch="Fill">
            <Image x:Name="imageBox" Stretch="Fill"/>
        </Viewbox>
        <Label x:Name="idLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Foreground="Red"/>
    </Grid>
</Window>
