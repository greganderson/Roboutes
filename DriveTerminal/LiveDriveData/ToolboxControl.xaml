        <Image x:Name="stuckOff" HorizontalAlignment="Left" Height="62" Margin="295,37,0,0" VerticalAlignment="Top" Width="58" Source="/WheelMonitor;component/Resources/indicatorbw.png" Panel.ZIndex="1"/>
